<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if flash[:notice] %>
    <p><%= flash[:notice] %></p>
    <% end %>

    <% @books.each do |book| %>
    <tr>
        <td><%=book.title %></td>
        <td><%=book.body %></td>
        <td><%=link_to "show",book_path(book.id) %></td>
        <td><%=link_to "edit",edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete , "data-confirm" => "本当に削除しますか？"%></td>
    </tr>
    <% end %>
</table>


<h1>New book</h1>
